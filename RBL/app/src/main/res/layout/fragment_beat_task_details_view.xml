<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="task" type="com.velectico.rbm.beats.model.TaskDetails"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dashboard">

       <!-- <LinearLayout
            android:id="@+id/beat_schedule_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/colorOrange">

            <TextView
                android:id="@+id/tv_beat_schedule_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Tasks"
                android:textColor="#040404"
                android:textSize="18dip"
                android:typeface="sans"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"

                />

        </LinearLayout>-->



        <LinearLayout
        android:id="@+id/beat_summary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beat_schedule_name"
        android:background="@android:color/white"
        android:padding="5dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/beat_name"
                    android:text="@{task.BM_Beat_Name}" />



            </LinearLayout>
            <!-- -Expense Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/rv_caption"
                    android:text="@{task.schedule_startDate + ` - `+task.schedule_endDate}" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/rv_caption"
                    android:text="@{task.BM_Resp_Level}" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/rv_caption"
                    android:text="@{task.assigneeName}" />


            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_20dp"
                android:paddingTop="10dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"
                    android:id="@+id/trgtTxt"
                    android:textSize="18dp"
                    android:text="Target" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listTitle"
                    android:layout_below="@+id/trgtTxt"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/rv_caption"
                        android:id="@+id/tv_invoice"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#307D7E"
                        android:text="Order" />

                    <TextView
                        android:id="@+id/tv_payment_date"
                        android:text="Collection"
                        android:textStyle="bold"
                        android:textColor="#307D7E"
                        android:textAlignment="center"
                        style="@style/rv_caption" />
                    <TextView
                        android:id="@+id/tv_duet_amount"
                        android:text="Visit"
                        android:textStyle="bold"
                        android:textColor="#307D7E"
                        android:textAlignment="center"
                        style="@style/rv_caption" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listTitle"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/rv_caption"
                        android:id="@+id/tv_ordrAmt"
                        android:textAlignment="center"
                        android:text="@{`₹ `+task.orderAmt}" />

                    <TextView
                        android:id="@+id/collectionAmt"
                        android:text="@{`₹ `+task.collectionAmt}"
                        android:textAlignment="center"
                        style="@style/rv_caption" />
                    <TextView
                        android:id="@+id/tv_payment_amount"
                        android:text="@{task.visit}"
                        android:textAlignment="center"
                        style="@style/rv_caption" />


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_beatList"
            android:layout_below="@id/beat_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

    </RelativeLayout>
</layout>