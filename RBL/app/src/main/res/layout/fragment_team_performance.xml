                                            android:background="@drawable/border">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Act Qty"
                                                style="@style/rv_beat_details_lbl_blue"/>

                                            <TextView
                                                android:layout_width="wrap_content"
