<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="orderCartInfo"
            type="com.velectico.rbm.beats.model.CreateOrderListDetails" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/cv_style">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2.5dp"
    android:paddingBottom="2.5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp" >

        <!-- ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/prodSec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="7dip"
            android:padding="2dip" >

            <ImageView
                android:id="@+id/list_image"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:src="@drawable/lubedemo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prodInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dip"
            android:padding="2dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:orientation="vertical">

            <TextView
                android:id="@+id/from_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="@{orderCartInfo.PM_Brand_name}"
                android:textColor="#040404"
                android:textSize="15dip"
                android:typeface="sans"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/plist_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{orderCartInfo.PM_MRP}"
                android:textColor="#1d1d1d"
                android:textSize="12dip"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/plist_price_text_strike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{orderCartInfo.PM_Disc_Price}"
                android:textColor="#1d1d1d"
                android:textSize="12dip"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/plist_special_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{orderCartInfo.PM_Net_Price}"
                android:textColor="#1d1d1d"
                android:textSize="12dip"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/plist_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1.5 ltr"
                android:textColor="#343434"
                android:textSize="12dip" />

        </LinearLayout>


            <LinearLayout
                android:id="@+id/cart_plus_minus_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

               >

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     >
                    <LinearLayout
                        android:id="@+id/cart_quantity_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"


                        >

                <ImageButton
                    android:id="@+id/cart_minus_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_plus"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/cart_product_quantity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:text="10"
                    android:textSize="12dip"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/cart_plus_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/ic_minus"
                    android:layout_gravity="center_vertical"
                    />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/schemeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prodSec"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/et_beat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:visibility="visible"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:drawableRight="@drawable/ic_expand"
                android:text="Select Scheme" />

        <Spinner
            android:visibility="visible"
            android:id="@+id/sp_beatName"
            android:spinnerMode="dropdown"
            app:smsp_hint="Select Beat"
            style="@style/custom_spinner" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"></View>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>