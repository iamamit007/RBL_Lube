<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="beats"
            type="com.velectico.rbm.beats.model.TaskDetails" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/cv_style">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <!---Expense Id- -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/beat_name"
                            android:text="@{beats.BM_Beat_Name}" />



                    </LinearLayout>
                    <!-- -Expense Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/datetxt"
                            style="@style/rv_caption"
                            android:text="" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/rv_caption"
                            android:text="@{beats.BM_Resp_Level}" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                        style="@style/rv_caption"
                        android:text="@{beats.assigneeName}" />


                    </LinearLayout>

                    <!-- -Product Total Price -->


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen_20dp"
                        android:paddingTop="10dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:background="@drawable/border">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerHorizontal="true"
                         android:textColor="@color/colorGreen"
                         android:textStyle="bold"
                         android:id="@+id/trgtTxt"
                         android:textSize="18dp"
                         android:text="Target" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/listTitle"
                            android:layout_below="@+id/trgtTxt"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/rv_caption"
                                android:id="@+id/tv_invoice"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#307D7E"
                                android:text="Order" />

                            <TextView
                                android:id="@+id/tv_payment_date"
                                android:text="Collection"
                                android:textStyle="bold"
                                android:textColor="#307D7E"
                                android:textAlignment="center"
                                style="@style/rv_caption" />
                            <TextView
                                android:id="@+id/tv_duet_amount"
                                android:text="Visit"
                                android:textStyle="bold"
                                android:textColor="#307D7E"
                                android:textAlignment="center"
                                style="@style/rv_caption" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/listTitle"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/rv_caption"
                                android:id="@+id/tv_ordrAmt"
                                android:textAlignment="center"
                                android:text="@{`₹`+beats.orderAmt}" />

                            <TextView
                                android:id="@+id/collectionAmt"
                                android:text="@{`₹`+beats.collectionAmt}"
                                android:textAlignment="center"
                                style="@style/rv_caption" />
                            <TextView
                                android:id="@+id/tv_visit"
                                android:text="@{beats.visit}"
                                android:textAlignment="center"
                                style="@style/rv_caption" />


                        </LinearLayout>

                        </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/navigateToTaskDetails"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>
</layout>